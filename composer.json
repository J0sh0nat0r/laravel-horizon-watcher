{
    "name": "spatie/laravel-horizon-watcher",
    "description": "Automatically restart Horizon when local file changes are detected",
    "keywords": [
        "spatie",
        "laravel",
        "laravel-horizon-watcher"
    ],
    "homepage": "https://github.com/spatie/laravel-horizon-watcher",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^9.0",
        "spatie/file-system-watcher": "^1.1",
        "spatie/laravel-package-tools": "^1.13.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\HorizonWatcher\\": "src",
            "Spatie\\HorizonWatcher\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\HorizonWatcher\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spatie\\HorizonWatcher\\HorizonWatcherServiceProvider"
            ],
            "aliases": {
                "HorizonWatcher": "Spatie\\HorizonWatcher\\Facades\\HorizonWatcher"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
